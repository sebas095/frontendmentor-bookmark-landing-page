section.section.section--first
  .section__item
    img(src="assets/icons/illustration-hero.svg", alt="").section__img
  .section__item
    h1.section__title A Simple Bookmark Manager
    p.section__text A clean and simple interface to organize your favourite websites. Open a new browser tab and see your sites load instantly. Try it for free.
    .buttons
      button.button.button--purple Get it on Chrome
      button.button.button--white Get it on Firefox

section#features.section--second
  h2.section__title Features
  p.section__text Our aim is to make it quick and easy for you to access your favourite websites. Your bookmarks sync between your devices so you can access them on the go.
  ul#tabs.tabs
    li.tabs__item.tabs__item--active Simple Bookmarking
    li.tabs__item Speedy Searching
    li.tabs__item Easy Sharing
  .tabs__container
    each tab in tabsItems
      article(class=`tabs__content ${tab.class} ${tab.active ? "tabs__content--active" : ""}`)
        img(src=`${tab.img}`, alt=`${tab.title}`).tabs__img
        h2.tabs__title= tab.title
        p.tabs__text= tab.text
        button.button.button--purple More Info

section#download.section.section--third
  h2.section__title Download the extension
  p.section__text We’ve got more browsers in the pipeline. Please do let us know if you’ve got a favourite you’d like us to prioritize.

  each card in cardItems
    article.browser-card
      img(src=`${card.img}`, alt=`${card.title}`).browser-card__image
      h3.browser-card__title= card.title
      p.browser-card__description= card.description
      img(src="assets/icons/bg-dots.svg", alt="")
      button.button.button--purple Add & install Extension

section#faqs.section.section--fourth
  h2.section__title Frequently Asked Questions
  p.section__text Here are some of our FAQs. If you have any other questions you’d like answered please feel free to email us. 
  #accordion.accordion
    each item in accordionItems
      .accordion__item
        h3.accordion__title= item.title 
        .accordion__text
          p= item.text
    .button-container  
      button.button.button--purple More Info